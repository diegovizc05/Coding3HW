import java.util.ArrayList;
import java.util.Arrays;
import java.util.List;
import java.util.Random;

class Salesman {
    private String name;
    private double revenue;

    public Salesman(String name, double revenue) {
        this.name = name;
        this.revenue = revenue;
    }

    public String getName() {
        return name;
    }

    public double getRevenue() {
        return revenue;
    }
}

public class SalesmanRanking {

    public static void main(String[] args) {
        // Generate a list of 20 salesmen with random names and revenues
        List<Salesman> salesmen = generateSalesmen();

        // Get the top 5 salesmen by revenue
        List<Salesman> topFive = topFive(salesmen);

        // Output the top 5 salesmen
        System.out.println("Top 5 Salesmen by Revenue:");
        for (Salesman salesman : topFive) {
            System.out.printf("Name: %s, Revenue: $%.2f%n", salesman.getName(), salesman.getRevenue());
        }
    }

    private static List<Salesman> generateSalesmen() {
        Random random = new Random();
        List<Salesman> salesmen = new ArrayList<>();
        String[] randomNames = { "Alice", "Bob", "Charlie", "Diana", "Eve", "Frank", "Grace", "Hank", "Ivy", "Jack",
                "Karen", "Leo", "Mona", "Nina", "Oscar", "Paul", "Quinn", "Rita", "Steve", "Tina" };

        for (int i = 0; i < 20; i++) {
            String name = randomNames[random.nextInt(randomNames.length)]; // Randomize name selection
            double revenue = 1000 + random.nextInt(9000); // Random revenue between 1000 and 9999
            salesmen.add(new Salesman(name, revenue));
        }

        return salesmen;
    }

    private static List<Salesman> topFive(List<Salesman> salesmen) {
        // Use a temporary array to store the top 5 salesmen
        Salesman[] topFiveArray = new Salesman[5];

        for (Salesman salesman : salesmen) {
            for (int i = 0; i < topFiveArray.length; i++) {
                if (topFiveArray[i] == null || salesman.getRevenue() > topFiveArray[i].getRevenue()) {
                    // Shift lower-ranked salesmen down the array
                    for (int j = topFiveArray.length - 1; j > i; j--) {
                        topFiveArray[j] = topFiveArray[j - 1];
                    }

                    // Insert the current salesman into the array
                    topFiveArray[i] = salesman;
                    break;
                }
            }
        }

        return new ArrayList<>(Arrays.asList(topFiveArray)); // Convert to a modifiable list
    }
}